#!/bin/bash

DIR="var"

if [ ! -d "$DIR" ]; then
    mkdir $DIR
    mkdir $DIR/cache
    mkdir $DIR/db_dumps
    mkdir $DIR/db_dumps/mysql
    mkdir $DIR/logs
    mkdir $DIR/mailspool
    echo "  $DIR directory created"
fi

if [ ! -d "$DIR/sessions" ]; then
    mkdir $DIR/sessions
    echo "  Sessions directory created"
fi

# update files permissions
chmod -R 0777 $DIR
chmod 777 app/console
